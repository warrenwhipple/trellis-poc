{
	"name": "@superset/repo",
	"version": "0.0.0",
	"description": "Superset Monorepo",
	"homepage": "https://superset.sh",
	"license": "Apache-2.0",
	"private": true,
	"type": "module",
	"workspaces": [
		"packages/*",
		"apps/*"
	],
	"scripts": {
		"dev": "turbo dev",
		"test": "turbo test",
		"build": "turbo build",
		"db:generate": "turbo db:generate",
		"db:push": "cd packages/db && bun db:push",
		"db:seed": "cd packages/db && bun db:seed",
		"db:migrate": "cd packages/db && bun db:migrate",
		"db:studio": "cd packages/db && bun db:studio",
		"db:reset": "cd apps/backend && bun run reset",
		"lint": "biome check --write .",
		"lint:check": "biome check .",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"typecheck": "turbo typecheck",
		"postinstall": "sherif",
		"clean": "git clean -xdf node_modules",
		"clean:workspaces": "turbo clean",
		"setup:env": "cd packages/scripts && bun run start"
	},
	"repository": {
		"type": "git"
	},
	"packageManager": "bun@1.3.0",
	"devDependencies": {
		"@biomejs/biome": "^2.2.6",
		"sherif": "^1.7.0",
		"turbo": "^2.5.8"
	}
}
